<%- include('../partials/header') %>

<h1><%= title %></h1>
<table id="list">
  <table>
    <tr>
      <th>Avatar:</th>
      <td><img src="<%= user.avatar %>" alt="Avatar"></td>
    </tr>
    <tr>
      <th>Name</th>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <th>Email:</th>
      <td><%= user.email %></td>
    </tr>
</table>


<table>
    <tr>
      <th><h3>Pet(s):</h3></th>
      <% if (user.pet && user.pet.length >= 0) { %>
        <% user.pet.forEach(function(pet) { %>
          <tr>
<th>
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= pet.name %></h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= pet.species %></h6>
        <p class="card-text">The pet profile includes a health tracker to log your health data.</p>
        <div class = "btn-toolbar">

          <button class="btn btn-light btn-outline-dark btn-sm">
            <a href="/pets/<%= pet.id%>" class="card-link">
              Pet Profile
            </a>
            </button>
            <form action="/user/<%= pet.id %>?_method=DELETE" method="POST">
              <button type="submit" class="btn btn-light btn-outline-dark btn-sm">
              Remove Pet
             </button>
            </form>

         
        </div>
      </div>
    </div>
  </th>
          </tr>
        <% }); %>
      <% } else { %>
        <tr>
          <td colspan="5">No pets found.</td>
        </tr>
      <% } %>
    </tr>
  </table>
    </table>


<%- include('../partials/footer') %>